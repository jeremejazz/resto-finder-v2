{
  "version": 2,
  "buildCommand": "pnpm --filter backend vercel-build",
  "builds": [
    {
      "src": "backend/src/vercel.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "backend/public/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/src/vercel.ts",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    }
  ]
}